include _general_mixins.jade

doctype html
html
  head
    title
      block title
        | #{__('Libreconf Dashboard')}
    meta(name='viewport', content='width=device-width, initial-scale=1')
    meta(charset='utf-8')
    link(rel='stylesheet', href='#{baseUri}/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='#{baseUri}/stylesheets/bootstrap-datetimepicker.min.css')
    link(rel='stylesheet', href='#{baseUri}/stylesheets/style.css')
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js')
  body
    .container
      .row
        .col-sm-9
          block content
        .col-sm-3
          +sidebar(models)
    
    script(src='#{baseUri}/javascripts/bootstrap.min.js')
    script(src='#{baseUri}/javascripts/moment.min.js')
    script(src='#{baseUri}/javascripts/bootstrap-datetimepicker.min.js')
    script(src='#{baseUri}/javascripts/marked.js')